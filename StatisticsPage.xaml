<Page x:Class="StoreApp.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
         Title="Статистика">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Общая статистика" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock x:Name="TotalStats" FontSize="14" Margin="10"/>
                    <Button Content="🔄 Обновить статистику" Click="RefreshStats_Click" 
                            Margin="10" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Статистика по категориям">
                <DataGrid x:Name="CategoryStatsGrid" AutoGenerateColumns="False" Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="150"/>
                        <DataGridTextColumn Header="Количество товаров" Binding="{Binding ProductCount}" Width="120"/>
                        <DataGridTextColumn Header="Средняя цена" Binding="{Binding AveragePrice}" Width="100"/>
                        <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalValue}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>