<Page x:Class="StoreApp.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Поиск товаров">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Поиск товаров" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchText" Width="200" Margin="5" 
                        Text="Введите название..." 
                        GotFocus="SearchText_GotFocus" 
                        LostFocus="SearchText_LostFocus"/>
                <ComboBox x:Name="SearchCategory" Width="150" Margin="5" 
                         DisplayMemberPath="CategoryName"
                         ToolTip="Выберите категорию"/>
                <Button Content="🔍 Поиск" Click="SearchProducts_Click" Margin="5" Padding="10,2"/>
                <Button Content="🧹 Очистить" Click="ClearSearch_Click" Margin="5" Padding="10,2"/>
            </StackPanel>
        </GroupBox>

        <!-- Результаты поиска -->
        <DataGrid Grid.Row="1" x:Name="SearchResultsGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category1.CategoryName}" Width="120"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>