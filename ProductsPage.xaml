<Page x:Class="StoreApp.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Управление товарами">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма добавления/редактирования -->
        <GroupBox Grid.Row="0" Header="Добавить/Редактировать товар" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="ProductName" Width="150" Margin="5" 
                        ToolTip="Название товара" Text="Название товара"
                        GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                <ComboBox x:Name="CategoryCombo" Width="120" Margin="5" 
                         DisplayMemberPath="CategoryName" ToolTip="Выберите категорию"/>
                <TextBox x:Name="ProductPrice" Width="80" Margin="5" 
                        ToolTip="Цена" Text="Цена"
                        GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                <TextBox x:Name="ProductQuantity" Width="80" Margin="5" 
                        ToolTip="Количество" Text="Количество"
                        GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                <Button Content="➕ Добавить" Click="AddProduct_Click" Margin="5" Padding="10,2"/>
                <Button Content="✏️ Сохранить" Click="UpdateProduct_Click" Margin="5" Padding="10,2"/>
                <Button Content="❌ Отмена" Click="CancelEdit_Click" Margin="5" Padding="10,2"/>
            </StackPanel>
        </GroupBox>

        <!-- Список товаров -->
        <DataGrid Grid.Row="1" x:Name="ProductsGrid" AutoGenerateColumns="False" 
                  SelectionChanged="ProductsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="120"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✏️" Click="EditProduct_Click" Margin="2" Padding="5,1"/>
                                <Button Content="❌" Click="DeleteProduct_Click" Margin="2" Padding="5,1"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText"/>
        </StatusBar>
    </Grid>
</Page>